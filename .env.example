# Container Registry Configuration
# Copy this file to .env and adjust values as needed

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Server
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Nix Build
GITHUB_REPO=github:imincik/flake-forge
NIX_BUILD_TIMEOUT=600  # seconds (10 minutes)

# Cache
CACHE_SIZE=50  # Number of image manifests to cache in memory

# Validation Limits
MAX_IMAGE_NAME_LENGTH=255
MAX_TAG_LENGTH=128
